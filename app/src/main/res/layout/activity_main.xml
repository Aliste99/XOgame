<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thirtyseven.xogame.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft='@dimen/image_button_padding_bottom'
        android:layout_marginRight='@dimen/image_button_padding_bottom'
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton00"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="@dimen/image_button_height"
                android:layout_marginBottom="@dimen/image_button_padding_bottom"
                android:layout_marginLeft="@dimen/image_button_padding_bottom"
                android:layout_marginRight="@dimen/image_button_padding_bottom"
                app:srcCompat="?android:attr/listChoiceBackgroundIndicator" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="@dimen/image_button_height"
                android:layout_marginBottom="@dimen/image_button_padding_bottom"
                android:layout_marginLeft="@dimen/image_button_padding_bottom"
                android:layout_marginRight="@dimen/image_button_padding_bottom"
                app:srcCompat="?android:attr/listChoiceBackgroundIndicator" />

            <ImageButton
                android:id="@+id/imageButton20"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="@dimen/image_button_height"
                android:layout_marginBottom="@dimen/image_button_padding_bottom"
                android:layout_marginLeft="@dimen/image_button_padding_bottom"
                android:layout_marginRight="@dimen/image_button_padding_bottom"
                app:srcCompat="?android:attr/listChoiceBackgroundIndicator" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton01"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="@dimen/image_button_height"
                android:layout_marginBottom="@dimen/image_button_padding_bottom"
                android:layout_marginLeft="@dimen/image_button_padding_bottom"
                android:layout_marginRight="@dimen/image_button_padding_bottom"
                app:srcCompat="?android:attr/listChoiceBackgroundIndicator" />

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="@dimen/image_button_height"
                android:layout_marginBottom="@dimen/image_button_padding_bottom"
                android:layout_marginLeft="@dimen/image_button_padding_bottom"
                android:layout_marginRight="@dimen/image_button_padding_bottom"
                app:srcCompat="?android:attr/listChoiceBackgroundIndicator" />

            <ImageButton
                android:id="@+id/imageButton21"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="@dimen/image_button_height"
                android:layout_marginBottom="@dimen/image_button_padding_bottom"
                android:layout_marginLeft="@dimen/image_button_padding_bottom"
                android:layout_marginRight="@dimen/image_button_padding_bottom"
                app:srcCompat="?android:attr/listChoiceBackgroundIndicator" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton02"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="@dimen/image_button_height"
                android:layout_marginBottom="@dimen/image_button_padding_bottom"
                android:layout_marginLeft="@dimen/image_button_padding_bottom"
                android:layout_marginRight="@dimen/image_button_padding_bottom"
                app:srcCompat="?android:attr/listChoiceBackgroundIndicator" />

            <ImageButton
                android:id="@+id/imageButton12"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="@dimen/image_button_height"
                android:layout_marginBottom="@dimen/image_button_padding_bottom"
                android:layout_marginLeft="@dimen/image_button_padding_bottom"
                android:layout_marginRight="@dimen/image_button_padding_bottom"
                app:srcCompat="?android:attr/listChoiceBackgroundIndicator" />

            <ImageButton
                android:id="@+id/imageButton22"
                android:layout_width="@dimen/image_button_width"
                android:layout_height="@dimen/image_button_height"
                android:layout_marginBottom="@dimen/image_button_padding_bottom"
                android:layout_marginLeft="@dimen/image_button_padding_bottom"
                android:layout_marginRight="@dimen/image_button_padding_bottom"
                app:srcCompat="?android:attr/listChoiceBackgroundIndicator" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
